# Stage 1: Build the React application
FROM node:18.19.1-alpine AS build
WORKDIR /app

COPY package*.json ./
RUN npm ci --force

COPY . .
RUN npm run build

# Stage 2: Serve the application with Nginx
FROM nginx:alpine
COPY --from=build /app/build /usr/share/nginx/html

EXPOSE 80
CMD ["nginx", "-g", "daemon off;"]
